{
    "name": "afrihost/code-kata-base",
    "description": "Afrihost Code Kata Base",
    "license": "MIT",
    "authors": [
        {
            "name": "Johnathan Dell",
            "email": "open-source@afrihost.com"
        }
    ],
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8"
    },
    "autoload": {
        "psr-4": { "Src\\": "Src/" },
        "exclude-from-classmap": [
            "test/"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Test\\": "Test/" }
    },
    "scripts": {
        "post-install-cmd": [
            "rm -f phpunit; ln -s vendor/phpunit/phpunit/phpunit phpunit"
        ]
    }
}

